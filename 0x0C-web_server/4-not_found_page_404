#!/usr/bin/env bash
# Script to install and configure nginx with a custom 404 page

# Update the package lists for upgrades and new package installations
sudo apt-get update -y

# Install nginx
sudo apt-get install -y nginx

# Create a new index.html file
echo "Hello World!" | sudo tee /var/www/html/index.html

# Add a 301 redirect for /redirect_me in the default nginx configuration
sudo sed -i 's/location \/ {/location \/ {\n\trewrite ^\/redirect_me$ https:\/\/www.example.com\/ permanent;\n}/g' /etc/nginx/sites-available/default

# Create a custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Configure nginx to use the custom 404 page
sudo sed -i 's/error_page 404 \/404.html;/error_page 404 \/custom_404.html;/g' /etc/nginx/sites-available/default

# Restart nginx
sudo service nginx start
