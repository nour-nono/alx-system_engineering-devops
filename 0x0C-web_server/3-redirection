#!/usr/bin/env bash
# Script that configures a new Ubuntu machine to respect above requirements

sudo apt-get update
sudo apt-get install -y nginx

# Start nginx
sudo service nginx start

# Create a new index.html file
echo "Hello World!" | sudo tee /var/www/html/index.html

# Add a 301 redirect for /redirect_me in the default nginx configuration
echo "location = /redirect_me { return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4; }" | sudo tee -a /etc/nginx/sites-available/default

# Restart nginx
sudo service nginx restart
